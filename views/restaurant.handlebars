{{!-- detailed results per restuarant --}}

<div class="row mt-4">
  <div class="col-md-1"></div>
  <div class="card text-center col-md-10">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <button type="button" id="detailsBtn" class="btn btn-outline-dark nav-link ">Restaurant Details</button>
        </li>
        <li class="nav-item">
          <button type="button" id="dealsBtn" class="btn btn-outline-dark nav-link ">All Deals</button>
        </li>
        <li class="nav-item">
          <button type="button" id="contactBtn" class="btn btn-outline-dark nav-link ">Contact</button>
        </li>
        <li class="nav-item">
          <button type="button" id="mapBtn" class="btn btn-outline-dark nav-link ">Directions/Map</button>
        </li>

      </ul>
    </div>
    <div class="card-body">
      <div id="detailsDiv">{{#each restaurant}}
        <h5 class="card-title" id="restaurantName">{{restaurant_name}}
        </h5>
        <p class="card-text" id="restaurantType">{{description}}</p>
        <a id="restaurantWeblink" href="{{restaurant_website}}" class="btn btn-outline-dark">Go to Website</a>
        {{/each}}
        <a id="restaurantWeblink" href="/search" class="btn btn-outline-dark">Back to Search</a>
        <h4>Leave a Comment</h4>
        <form class="card mt-4 text-center col-md-10">
          <div class="form-group">
            <label>User Name? </label>
            <input type="text" class="form-control" id="userName" placeholder="Name">
          </div>
          <div class="form-group">
            <label>Rating</label>
            <select multiple class="form-control" id="userRating">
              <option value="1">1 *</option>
              <option value="2">2 **</option>
              <option value="3">3 ***</option>
              <option value="4">4 ****</option>
              <option value="5">5*****</option>
            </select>
          </div>
          <div class="form-group">
            <label id="comment">Leave a Comment</label>
            <textarea class="form-control" rows="3"></textarea>
          </div>
        </form>
      </div>
      <div id="dealsDiv">
        <table class="table table-sm">
          <thead>
            <tr>
              <th scope="col">Day of Deal</th>
              <th scope="col">Deal Type</th>
              <th scope="col">Start Time</th>
              <th scope="col">End Time</th>
              <th scope="col">Deal Deets!</th>

            </tr>
          </thead>
          <tbody>
            
              {{#each restaurant}}
              {{#each Deals}}
              {{#if hasDeal}}
              <tr>
              <th scope="row">{{day}}</th>
              <td>{{deal_type}}</td>
              <td>{{start_time}}</td>
              <td>{{end_time}}</td>
              <td>{{deal_description}}</td>
              {{/if}}{{/each}} {{/each}}
            </tr>
          </tbody>
        </table>
      </div>
      <div id="contactDiv">
        <h5>phone number maybe (715) 555-4738</h5>
        <h5>12345 Free Stuff Way</h5>
        <h5>Drinkland, US</h5>
        <h5>80938</h5>
      </div>
      <div id="mapDiv">
        <p>map and stuff from google api... could do get call on click of button</p>
      </div>

    </div>
  </div>
  <div class="col-md-1"></div>
</div>
